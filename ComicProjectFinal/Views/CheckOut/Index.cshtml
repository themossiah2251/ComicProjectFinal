@using ComicProjectFinal.Models
@model Cart // Use the Cart model, which includes CartDetails
@{
    ViewData["Title"] = "Checkout";
}

<h1>Checkout Page</h1>
@if (Model.CartDetails != null && Model.CartDetails.Any()) // Check if there are any cart details
{
    <table class="table table-responsive table-light table-bordered" style="width:100%">
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Image</th>
            <th>Total</th>
        </tr>
        @foreach (var item in Model.CartDetails)
        {
            <tr>
                <td>@item.Products.ProductName</td>
                <td>@item.UnitPrice</td>
                <td>@item.Quantity</td>
                <td><img src="@Url.Content(item.Products.Images)" alt="Product Image" style="width:130px; height:150px;" /></td>
                <td>@(item.UnitPrice * item.Quantity)</td>
            </tr>
        }
    </table>
    <br />
    <p>
        <a class="btn btn-primary" href="@Url.Action("CheckOut", "CheckOut")">Proceed to Checkout</a>
    </p>
}
else
{
    <p>Your cart is empty.</p>
}